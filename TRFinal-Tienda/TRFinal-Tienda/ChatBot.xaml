<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRFinal_Tienda.ChatBot">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Chatbot Mr.Tilin69" FontSize="Medium" Margin="20,20,20,20"
                HorizontalOptions="CenterAndExpand" />
            <Frame HeightRequest="550" WidthRequest="200">
                <StackLayout Margin="20,20,20,20">
                    <WebView 
                        WidthRequest="500"
                        HeightRequest="200"

                        VerticalOptions="FillAndExpand"
                        x:Name="web_chat">

                    </WebView>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>